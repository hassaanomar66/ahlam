{#
| Variable      | Type   | Description                                                      |
|---------------|--------|------------------------------------------------------------------|
| items[]       | array  | List of 3 features                                               |
| items[].icon  | string | SallaIcons css class `sicon-*`                                   |
| items[].title | string | Title of the feature                                             |
| items[].text  | string | Subtitle for the feature                                         |
| position      | Int    | Sorting number start from zero                                   |
#}
<section class="s-block s-block--features container py-8">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    {% for item in items %}
      <div class="s-block--features__item text-center p-4 bg-white rounded-xl shadow hover:shadow-md transition">
        <div class="feature-icon mx-auto mb-4 flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 text-primary text-3xl">
          <i class="{{ item.icon }}"></i>
        </div>
        <h2 class="text-lg font-semibold mb-2">{{ item.title }}</h2>
        <p class="text-sm text-gray-600">{{ item.text }}</p>
      </div>
    {% endfor %}
  </div>
</section>
