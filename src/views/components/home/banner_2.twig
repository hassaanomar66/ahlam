<section class="s-block s-block--default-home-slider s-block--full-bg">

  <salla-slider auto-play pagination type="fullwidth">

    <div slot="items">
      {% for banner in component.banner_last %}
        <a href="{{ banner.link }}">
          <img src="{{ banner.image }}" alt="{{ banner.title }}" loading="lazy" style="width: 100%; height: auto;" />
        </a>
      {% endfor %}
    </div>

  </salla-slider>

</section>
